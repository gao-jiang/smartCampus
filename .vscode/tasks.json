{
    "tasks": [
        // 调试单个.cpp文件
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 生成活动文件",
            "command": "C:/msys64/mingw64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileDirnameBasename}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        },
        // 调试整个项目
        {
            "label": "C/C++: g++.exe 构建整个项目",
            "options": {
                "cwd": "${fileDirname}"
            },
            "type": "shell",
            "command": "mkdir build 2>$null; cd build; cmake -G 'MinGW Makefiles' ..; mingw32-make",
            "group": {
                "kind": "build",
                "isDefault": false
            },
        }
    ],
    "version": "2.0.0"
}